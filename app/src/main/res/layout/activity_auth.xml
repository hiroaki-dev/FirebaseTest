<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	tools:context="me.hiroaki.firebasetest.AuthActivity"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<android.support.percent.PercentRelativeLayout
		android:id="@+id/activity_auth"
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<TextView
			android:id="@+id/signIn_RL"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
			android:layout_marginTop="16dp"
			android:text="ログイン/ログアウト"
			android:textSize="18sp"/>

		<android.support.design.widget.TextInputLayout
			android:id="@+id/email_RL"
			android:layout_height="wrap_content"
			android:layout_below="@id/signIn_RL"
			android:layout_centerHorizontal="true"
			app:layout_widthPercent="70%">

			<EditText
				android:id="@+id/email"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:hint="email"
				android:maxLines="1"/>

		</android.support.design.widget.TextInputLayout>


		<android.support.design.widget.TextInputLayout
			android:id="@+id/password_RL"
			android:layout_height="wrap_content"
			android:layout_below="@id/email_RL"
			android:layout_centerHorizontal="true"
			android:layout_marginTop="32dp"
			app:layout_widthPercent="70%">

			<EditText
				android:id="@+id/password"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:hint="password"
				android:maxLines="1"/>

		</android.support.design.widget.TextInputLayout>

		<Button
			android:id="@+id/login"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignLeft="@id/password_RL"
			android:layout_below="@id/password_RL"
			android:layout_marginTop="32dp"
			android:text="login"/>

		<Button
			android:id="@+id/logout"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignRight="@id/password_RL"
			android:layout_below="@id/password_RL"
			android:layout_marginTop="32dp"
			android:text="logout"/>

		<TextView
			android:id="@+id/status"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignBottom="@id/logout"
			android:layout_below="@id/password_RL"
			android:layout_centerHorizontal="true"
			android:layout_marginTop="32dp"
			android:gravity="center"
			android:text="status"/>

		<Button
			android:id="@+id/start"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/status"
			android:layout_centerHorizontal="true"
			android:layout_marginTop="48dp"
			android:text="start"/>


		<TextView
			android:id="@+id/signUp_RL"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/start"
			android:layout_centerHorizontal="true"
			android:layout_marginTop="48dp"
			android:text="新規登録"
			android:textSize="18sp"/>

		<android.support.design.widget.TextInputLayout
			android:id="@+id/signUpEmail_RL"
			android:layout_height="wrap_content"
			android:layout_below="@id/signUp_RL"
			android:layout_centerHorizontal="true"
			app:layout_widthPercent="70%">

			<EditText
				android:id="@+id/signUpEmail"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:hint="email"
				android:maxLines="1"/>

		</android.support.design.widget.TextInputLayout>


		<android.support.design.widget.TextInputLayout
			android:id="@+id/signUpPassword_RL"
			android:layout_height="wrap_content"
			android:layout_below="@id/signUpEmail_RL"
			android:layout_centerHorizontal="true"
			android:layout_marginTop="32dp"
			app:layout_widthPercent="70%">

			<EditText
				android:id="@+id/signUpPassword"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:hint="password"
				android:maxLines="1"/>

		</android.support.design.widget.TextInputLayout>

		<Button
			android:id="@+id/signUp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/signUpPassword_RL"
			android:layout_centerHorizontal="true"
			android:layout_marginTop="32dp"
			android:text="sign up"/>


	</android.support.percent.PercentRelativeLayout>
</ScrollView>